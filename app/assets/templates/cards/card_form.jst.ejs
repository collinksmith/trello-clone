<% if (display_form) { %>
  <label>Title
  <input class="form-control"
         type="text"
         name="title"
         value="<%= card.escape('title') %>">
  </label>
  <br>

  <label>Description
  <input class="form-control"
         type="textarea"
         name="description"
         value="<%= card.escape('description') %>">
  </label>
  <br>

  <input type="hidden"
         name="ord"
         value="<%= list.cards().length + 1 %>">

  <input type="hidden"
         name="list_id"
         value="<%= list.id %>">
  
  <input class="button btn-primary" type="submit" value="Create Card">
<% } else { %>
  <button class="add-card button btn-primary">Add a Card...</button>
<% } %>